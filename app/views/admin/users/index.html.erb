<h1>Users</h1>

<%= link_to('Tous les utilisateurs', {:action => "index"}) %>

<%= link_to('Les utilisateurs en attente de validation', {:action => "index", :approved => "false"}) %>

<table>
  <% @users.each do |user| %>
    <tr>
      <td>E-mail : <%= user.email %></td>
      <td>Statut : <%= user.approved %></td>
      <td><%= link_to("Modifier", edit_admin_user_path(user)) %></td>
    </tr>
  <% end %>
</table>