<%= form_for :annonce, url: annonces_path do |a| %>
<p>
  <%= a.label :entreprise %><br>
  <%= a.text_field :entreprise %>
</p>

<p>
  <%= a.label :titre %><br>
  <%= a.text_field :titre %>
</p>

<p>
  <%= a.label :type_offre %><br>
  <%= a.text_field :type_offre %>
</p>

<p>
  <%= a.label :description %><br>
  <%= a.text_field :description %>
</p>

<p>
  <%= a.label :duree %><br>
  <%= a.text_field :duree %>
</p>

<p>
  <%= a.label :date_debut %><br>
  <%= a.text_field :date_debut %>
</p>

<p>
  <%= a.label :moyen_contact %><br>
  <%= a.text_field :moyen_contact %>
